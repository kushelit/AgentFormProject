{
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ],
    "predeploy": [
      "cmd /c npm.cmd --prefix \"%RESOURCE_DIR%\" run lint",
      "cmd /c npm.cmd --prefix \"%RESOURCE_DIR%\" run build"
    ]
  }
}
